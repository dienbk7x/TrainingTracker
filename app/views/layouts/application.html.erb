<!DOCTYPE html>
<html>
<head>
  <title>Training Tracker</title>
  <%= stylesheet_link_tag 'formtastic', 'formastic_changes' %>
  <%= stylesheet_link_tag 'screen', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print', :media => 'print' %>
  <!--[if lt IE 8]>
    <%= stylesheet_link_tag 'ie', :media => 'screen, projection' %>
  <![endif]-->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="container">
		<!-- Header -->
		<div class="span-24">
			<%= render :file => "layouts/header" %>
		</div>
		
		<!-- Dynamic Content -->
		<%= yield %>
		
		<!-- Footer -->
		<div class="span-24">
			<%= render :file => "layouts/footer" %>
		</div>
	</div>
</body>
</html>
