<%= semantic_form_for @employee do |f| %>
	<%= f.inputs do %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :username %>
		<%= f.input :departments, :collection => Department.order('lft ASC').all %>
		<%= f.input :trainer %>
		<%= f.input :active %>
	<% end %>
	<%= f.buttons :commit %>
<% end %>