<h3>Employees</h3>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Active</th>
  </tr>

<% @department.employees.each do |employee| %>
  <tr>
    <td><%= link_to employee.username, employee %></td>
    <td><%= employee.last_name %>, <%= employee.first_name %></td>
    <td><%= employee.active %></td>
  </tr>
<% end %>
</table>