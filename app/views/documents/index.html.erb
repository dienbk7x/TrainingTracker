<h1>Listing Documents</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Group</th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= link_to document.number, document %></td>
    <td><%= document.name %></td>
    <td><%= (document.document_group ? (link_to document.document_group.display_name, document.document_group) : '') %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

