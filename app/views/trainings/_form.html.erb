<%= semantic_form_for @training do |form| %>
	<%= form.inputs do %>
	  <%= form.input :document, :as => 'select', :label_method => :full_name, :class => 'span8' %>
	  <%= form.input :employee %>
	  <%= form.input :trainer_id, :as => 'select', :collection => Employee.where(:active => true, :trainer => true) %>
		<%= form.input :trained_on, :as => :string  %>
	  <%= form.input :expires, :label => 'Expires (months)' %>
	<% end %>
	<%= form.buttons do %>
	  <%= form.commit_button %>
	<% end %>
<% end %>

