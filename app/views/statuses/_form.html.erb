<%= semantic_form_for @status do |f| %>
	<% f.inputs do %>
	 <%= f.input :name %>
	 <%= f.input :color %>
	<% end %>
	<% f.buttons do %>
	 <%= f.buttons :commit %>
	<% end %>
<% end %>

<%= javascript_include_tag("colorpicker") %>
<script>
  $('#status_color').ColorPicker({ 
    livePreview: true,
    color: '#<%= @status.color %>',
    onBeforeShow: function () {
      $(this).ColorPickerSetColor(this.value);
    },
    onChange: function (hsb, hex, rgb) {
      $('#status_color').val(hex);
    }
  });
</script>
